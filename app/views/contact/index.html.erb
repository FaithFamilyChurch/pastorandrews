<div class="contactformwrapper">
    <h3 style="width:100%;text-align:center;color:#7d786c;">Send Pastor Andrews a Message</h3>
    <form class="contactform">
        <div class="form-group">
            <label for="contact_name">Name</label>
            <input type="text" class="form-control" id="contact_name" placeholder="Name">
        </div>
        <div class="form-group">
            <label for="contact_email">Email Address</label>
            <input type="email" class="form-control" id="contact_email" placeholder="Email Address">
        </div>
        <div class="form-group">
            <label for="contact_subject">Subject</label>
            <input type="text" class="form-control" id="contact_subject" placeholder="Subject">
        </div>
        <div class="form-group">
            <label for="contact_message">Message</label>
            <textarea class="form-control" id="contact_message" rows="7" style="resize:none;"></textarea>
        </div>
        <%= recaptcha_tags %>
        <div class="emailformfield form-group" style="width:100%;text-align:left;margin-top:15px;">
            <button>Send Message</button>
        </div>
    </form>
</div>