                    Buy on Amazon
                </a>
        </div>
    </div>
    <button class="nextbutton glyphicon glyphicon-chevron-right"></button>
</div>
<div class="section linkswrapper">
    <% sWidth = "auto" %>
    <% if @aArticles.size == 5 %>
        <% sWidth = "18%" %>
    <% elsif @aArticles.size == 4 %>
        <% sWidth = "22%" %>
    <% elsif @aArticles.size == 3 %>
        <% sWidth = "30%" %>
    <% elsif @aArticles.size == 2 %>
        <% sWidth = "45%" %>
    <% elsif @aArticles.size == 1 %>
        <% sWidth = "auto" %>
    <% end %>
    <% nCount = 0 %>
    <% @aArticles.each do |oArticle| %>
    <div class="linkdiv" style="width:<%= sWidth %>">
        <a href="<%= @sDomain %><%= oArticle['link'] %>">
            <% if nCount == 0 %>
                <div class="recent_post_div"><i class="glyphicon glyphicon-star recent_icon"></i>Latest Post</div>
            <% end %>
            <% nCount = nCount + 1 %>
            <% if oArticle['imageid'] == 0 %>
                <div class="article_image_div" style="background:url('<%= oArticle['imagesrc'] %>');background-size:cover;background-position:center;"></div>
            <% else %>
                <div class="article_image_div" style="background:url('/assets/blogimages/<%= oArticle['imageid'] %>/<%= oArticle['imagename'] %>');background-size:cover;background-position:center;"></div>
            <% end %>
        </a>
        <div class="article_meta_div">
            <a target="_blank" class="article_link" href="<%= @sDomain %><%= oArticle['link'] %>">
                <%= oArticle['title'] %>
            </a>
            <div class="article_date_div">
                <%= oArticle['date'] %>
            </div>
            <div class="article_summary_div">
                <%= oArticle['text'].html_safe %>
            </div>
        </div>
    </div>
    <% end %>
</div>
